<Window x:Class="TourPlanner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.Views"
        mc:Ignorable="d"
        Title="Tour Planner" Height="800" Width="1400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Linker Bereich: Navigationsleiste -->
        <StackPanel Grid.Column="0" Margin="10,50,10,10">
            <!-- Search Bar -->
            <TextBox Height="30" Margin="0,0,0,10" Text="Search..."/>
            <TreeView>
                <TreeViewItem Header="Wienerwald">
                    <TreeViewItem Header="Dopplerhütte"/>
                    <TreeViewItem Header="Dorfrunde"/>
                    <TreeViewItem Header="Wiener Stadtwanderweg 1"/>
                    <!-- Fügen Sie weitere Wege hinzu -->
                </TreeViewItem>
            </TreeView>
        </StackPanel>

        <!-- Rechter Bereich: Daten und Aktionen -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Button Leiste -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="10">
                <Button Content="Add Log" Click="LogButton_Click" Margin="5"/>
                <Button Content="Summarize" Margin="5"/>
                <Button Content="Add Tour" Margin="5"/>
                <Button Content="Help" Click="HelpButton_Click" Margin="5"/>
            </StackPanel>
            
            <!-- Datentabelle -->
            <DataGrid Grid.Row="1" Margin="10">
                <!-- Hier könnten Spalten spezifiziert werden -->
            </DataGrid>
        </Grid>
    </Grid>
</Window>
